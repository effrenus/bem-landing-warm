.client-card
	display: flex
	justify-content: center
	margin-bottom: 30px
	color: #FFF
	text-shadow: 0 1px 1px #222

	&__card
		width: 28%
		padding: 0 15px
		box-sizing: border-box

	&__title
		min-height: 3.2em
		font-size: 1.5em
		font-weight: bold

	&__text
		min-height: 6em
		line-height: 1.5

	&__price
		color: #FCDF3E
		font-weight: bold
		font-size: 1.2em

		b
			display: block
			font-size: 2em
