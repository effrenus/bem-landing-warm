.done-project

	&_bg_g
		background: #EEE

	&__container
		@extends $container
		position: relative
		padding: 30px 0 30px 250px
		box-sizing: border-box

	&__head
		width: 500px
		margin-bottom: 20px
		padding: 10px
		border: 4px solid #449ED2
		text-align: center

	&__images .image
		width: 33%

	&__title
		margin-bottom: 5px
		font-weight: bold
		font-size: 1.5em

	&__price
		margin-bottom: 20px

	&__profit
		margin-bottom: 15px

	&__sidebar
		position: absolute
		left: 0
		width: 240px
		text-align: center

		b
			display: block
			font-weight: bold
			font-size: 1.9em
