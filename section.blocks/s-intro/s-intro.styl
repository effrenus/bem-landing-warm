$block-bcg = rgba(73, 131, 169, 0.9)
$block-height = 600px

.s-intro
	position: relative
	background: url(../../images/s-intro-back.jpg) 50% 0 no-repeat

	&__container
		@extends $container
		position: relative
		height: $block-height

	&__header
		position: absolute
		left: 0
		right: 0
		top: 0
		padding: 20px
		border: 3px solid #FFF
		border-top: 0
		border-radius: 0 0 10px 10px
		background-color: $block-bcg
		color: #FFF
		text-align: center
		box-sizing: border-box

	&__title
		margin-bottom: 10px
		font-size: 2.8em
		font-weight: bold
		text-shadow: 0 2px #333
		text-transform: uppercase

	&__text
		text-shadow: 0 1px #333
		line-height: 1.5

	&__form
		position: absolute
		bottom: 0
		left: 0
		width: 100%
		min-height: 50px
		padding: 20px
		box-sizing: border-box
		border: 3px solid #FFF
		border-bottom: 0
		border-radius: 10px 10px 0 0
		background-color: $block-bcg
		text-align: center
